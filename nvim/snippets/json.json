{
  "jsconfig ESNext": {
    "prefix": "jse",
    "body": [
      "{",
      "  \"compilerOptions\": {",
      "    \"target\": \"esnext\",",
      "    \"module\": \"esnext\",",
      "    \"moduleResolution\": \"bundler\",",
      "    \"verbatimModuleSyntax\": true,",
      "    \"baseUrl\": \".\",",
      "    \"allowJs\": true,",
      "    \"checkJs\": false,",
      "    \"strict\": true,",
      "    \"skipLibCheck\": true,",
      "    \"paths\": {",
      "      \"@/*\": [\"./*\"]",
      "    }",
      "  },",
      "  \"exclude\": [\"node_modules\"]",
      "}"
    ],
    "description": "jsconfig.json for ESNext"
  },
  "jsconfig Node": {
    "prefix": "jsn",
    "body": [
      "{",
      "  \"compilerOptions\": {",
      "    \"target\": \"es6\",",
      "    \"module\": \"commonjs\",",
      "    \"moduleResolution\": \"Node\",",
      "    \"baseUrl\": \".\",",
      "    \"esModuleInterop\": true,",
      "    \"forceConsistentCasingInFileNames\": true,",
      "    \"allowJs\": true,",
      "    \"checkJs\": false,",
      "    \"strict\": true,",
      "    \"skipLibCheck\": true",
      "  },",
      "  \"exclude\": [\"node_modules\"]",
      "}"
    ],
    "description": "jsconfig.json for Node"
  },
  "tsconfig ESNext": {
    "prefix": "tse",
    "body": [
      "{",
      "  \"compilerOptions\": {",
      "    \"module\": \"esnext\",",
      "    \"target\": \"esnext\",",
      "    \"lib\": [\"esnext\"],",
      "    \"sourceMap\": true,",
      "    \"declaration\": true,",
      "    \"declarationMap\": true,",
      "    \"strict\": true,",
      "    \"verbatimModuleSyntax\": true,",
      "    \"isolatedModules\": true,",
      "    \"noUncheckedSideEffectImports\": true,",
      "    \"moduleDetection\": \"force\",",
      "    \"skipLibCheck\": true,",
      "    \"paths\": {",
      "      \"@/*\": [\"./src/*\"]",
      "    }",
      "  },",
      "  \"include\": [\"src\"],",
      "  \"exclude\": [\"node_modules\", \"tests\"]",
      "}"
    ],
    "description": "tsconfig.json for ESNext"
  },
  "tsconfig Node": {
    "prefix": "tsn",
    "body": [
      "{",
      "  \"compilerOptions\": {",
      "    \"module\": \"nodenext\",",
      "    \"target\": \"es2022\",",
      "    \"lib\": [\"es2022\"],",
      "    \"types\": [\"node\"],",
      "    \"sourceMap\": true,",
      "    \"declaration\": true,",
      "    \"declarationMap\": true,",
      "    \"strict\": true,",
      "    \"esModuleInterop\": true,",
      "    \"forceConsistentCasingInFileNames\": true,",
      "    \"allowJs\": true,",
      "    \"moduleDetection\": \"force\",",
      "    \"skipLibCheck\": true,",
      "    \"paths\": {",
      "      \"@/*\": [\"./src/*\"]",
      "    }",
      "  },",
      "  \"include\": [\"src\"],",
      "  \"exclude\": [\"node_modules\", \"tests\"]",
      "}"
    ],
    "description": "tsconfig.json for Node"
  }
}
